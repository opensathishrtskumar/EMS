<tiles-definitions>

	<definition name="devicemanagement" extends="homeSignedIn">
		<put-attribute name="content" value="/WEB-INF/views/devicemanagement/devices.jsp" />
	</definition>
	
	<definition name="devicemanagement/showdevice" extends="homeSignedIn">
		<put-attribute name="content" value="/WEB-INF/views/devicemanagement/showdevice.jsp" />
		
