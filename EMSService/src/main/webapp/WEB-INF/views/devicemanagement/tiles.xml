			<add-attribute value="/resources/datetimepicker/css/bootstrap-combined.min.css" />
			<add-attribute value="/resources/devicemanagement/css/devicemanagement.css" />
		</put-list-attribute>
		
		<put-list-attribute name="scripts" inherit="true">
			<add-attribute value="/resources/datetimepicker/js/bootstrap.min.js" />
			<add-attribute value="/resources/devicemanagement/js/devicemanagement.js" />
		</put-list-attribute>
	</definition>
	
	<definition name="devicemanagement/addDeviceView" extends="homeSignedIn">
		<put-attribute name="content" value="/WEB-INF/views/devicemanagement/adddevice.jsp" />
		
		<put-list-attribute name="styles" inherit="true">
			<add-attribute value="/resources/datetimepicker/css/bootstrap-combined.min.css" />
			<add-attribute value="/resources/devicemanagement/css/devicemanagement.css" />
		</put-list-attribute>
		
		<put-list-attribute name="scripts" inherit="true">
			<add-attribute value="/resources/datetimepicker/js/bootstrap.min.js" />
			<add-attribute value="/resources/devicemanagement/js/devicemanagement.js" />
		</put-list-attribute>
		
	</definition>
	
